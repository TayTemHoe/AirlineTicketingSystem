<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" 
      xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.mycompany.airlineticketingsystem.controller.CustomerRegisterController"
      stylesheets="@customer-style.css">
    
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <VBox styleClass="card" alignment="CENTER" spacing="15" maxWidth="400">
        <padding>
            <Insets bottom="30" left="30" right="30" top="30" />
        </padding>

        <Label text="CREATE ACCOUNT" styleClass="page-title" style="-fx-font-size: 24px;"/>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="Full Name" style="-fx-font-weight: bold;"/>
            <TextField fx:id="nameField" promptText="e.g. Ali bin Abu" />
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="IC Number" style="-fx-font-weight: bold;"/>
            <TextField fx:id="icField" promptText="e.g. 990101-14-1234" />
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="Email Address" style="-fx-font-weight: bold;"/>
            <TextField fx:id="emailField" promptText="e.g. ali@example.com" />
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="Phone Number" style="-fx-font-weight: bold;"/>
            <TextField fx:id="phoneField" promptText="e.g. 012-3456789" />
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="Gender" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="genderCombo" promptText="Select Gender" maxWidth="Infinity"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="Infinity">
            <Label text="Password" style="-fx-font-weight: bold;"/>
            <PasswordField fx:id="passwordField" promptText="Create a secure password" />
        </VBox>

        <Label fx:id="statusLabel" textFill="RED" wrapText="true"/>

        <Button text="Register Now" onAction="#handleRegister" 
                styleClass="button, btn-primary" maxWidth="Infinity" />

        <Button text="â† Back to Login" onAction="#handleBack" 
                style="-fx-background-color: transparent; -fx-text-fill: grey; -fx-underline: true;"/>
    </VBox>

</VBox>