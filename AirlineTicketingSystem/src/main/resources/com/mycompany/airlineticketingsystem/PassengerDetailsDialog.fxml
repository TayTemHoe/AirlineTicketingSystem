<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/28"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.airlineticketingsystem.controller.PassengerDetailsDialogController"
      spacing="14"
      styleClass="card">

    <padding>
        <Insets top="18" right="18" bottom="18" left="18"/>
    </padding>

    <VBox spacing="4">
        <Label text="Passenger Details" styleClass="section-title"/>
        <Label text="Please enter passenger info for the selected seat."
               style="-fx-text-fill: -color-text-light;"/>
    </VBox>

    <Separator />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="110" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Seat" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="seatLabel" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Full Name" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="e.g., John Tan" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Passport No" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="passportField" promptText="e.g., A12345678" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <Label fx:id="errorLabel" styleClass="error-label" visible="false" managed="false" wrapText="true"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" styleClass="button, btn-danger" onAction="#handleCancel"/>
        <Button text="OK" styleClass="button, btn-success" defaultButton="true" onAction="#handleOk"/>
    </HBox>

</VBox>
