<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.mycompany.airlineticketingsystem.controller.StaffLoginController">
    
    <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

    <Label text="STAFF LOGIN" textFill="#2196F3">
        <font><Font name="System Bold" size="24.0" /></font>
    </Label>

    <TextField fx:id="staffIdField" promptText="Enter Staff ID" maxWidth="250"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250"/>
    
    <Label fx:id="statusLabel" textFill="RED" />

    <Button text="Login" onAction="#handleLogin" 
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-pref-width: 100px;"/>
    
    <Button text="â† Back" onAction="#handleBack" 
            style="-fx-background-color: transparent; -fx-text-fill: grey; -fx-underline: true;"/>
</VBox>