<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.mycompany.airlineticketingsystem.controller.CustomerLoginController">
    
    <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

    <Label text="CUSTOMER LOGIN" textFill="#4CAF50">
        <font><Font name="System Bold" size="24.0" /></font>
    </Label>

    <TextField fx:id="icField" promptText="Enter IC Number (eg. 000000-00-0000)" maxWidth="250"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250"/>
    
    <Label fx:id="statusLabel" textFill="RED" />

    <Button text="Login" onAction="#handleLogin" 
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-pref-width: 100px;"/>
    <Button text="No Account? Sign Up" onAction="#goToRegister" 
            style="-fx-background-color: transparent; -fx-text-fill: #0078D7; -fx-underline: true; -fx-cursor: hand;"/>
    <Button text="â† Back" onAction="#handleBack" 
            style="-fx-background-color: transparent; -fx-text-fill: grey; -fx-underline: true;"/>
</VBox>