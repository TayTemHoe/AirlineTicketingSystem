<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/28" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.mycompany.airlineticketingsystem.controller.HomeController">
    
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label text="Welcome to Airline System">
        <font>
            <Font name="Arial Bold" size="28.0" />
        </font>
    </Label>
    
    <Label text="Please select your role:" textFill="#666666"/>

    <Button text="I am a Staff Member" 
            style="-fx-font-size: 16px; -fx-min-width: 200px; -fx-min-height: 50px; -fx-background-color: #2196F3; -fx-text-fill: white;" 
            onAction="#goToStaffLogin" />

    <Button text="I am a Customer" 
            style="-fx-font-size: 16px; -fx-min-width: 200px; -fx-min-height: 50px; -fx-background-color: #4CAF50; -fx-text-fill: white;" 
            onAction="#goToCustomerLogin" />
</VBox>